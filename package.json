{
  "name": "rexit-webpack-starter-kit",
  "version": "1.0.0",
  "description": "webpack starter kit",
  "main": "index.js",
  "scripts": {
    "lint": "npm run lint:html && npm run lint:js && npm run lint:style",
    "lint-fix": "npm run lint:style-fix && npm run lint:js-fix",
    "lint:style": "stylelint \"src/styles/**/*\" --syntax=scss",
    "lint:style-fix": "stylelint \"src/styles/**/*\" --syntax=scss --fix",
    "lint:js": "eslint src/js/**/*.js",
    "lint:js-fix": "eslint src/js/**/*.js --fix",
    "lint:html": "npx htmlhint \"app/*.html\"",
    "build": "cross-env NODE_ENV=production webpack --mode production",
    "dev": "cross-env NODE_ENV=development webpack --mode development",
    "start": "cross-env NODE_ENV=development webpack serve --mode development",
    "prepare": "husky install && husky add .husky/pre-commit \"npm run dev && npm run lint\""
  },
  "author": "Vladislav Gryadko (vgyadko@gmail.com)",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.12.7",
    "@babel/preset-env": "^7.12.7",
    "babel-loader": "^8.2.1",
    "clean-webpack-plugin": "^3.0.0",
    "cross-env": "^7.0.2",
    "css-loader": "^5.0.1",
    "eslint": "^8.0.1",
    "eslint-config-htmlacademy": "^4.1.0",
    "file-loader": "^6.2.0",
    "html-loader": "^1.3.2",
    "html-webpack-plugin": "^4.5.0",
    "htmlhint": "^0.15.2",
    "husky": "^7.0.2",
    "imagemin-gifsicle": "^7.0.0",
    "imagemin-jpegtran": "^7.0.0",
    "imagemin-mozjpeg": "^9.0.0",
    "imagemin-optipng": "^8.0.0",
    "imagemin-pngquant": "^9.0.1",
    "imagemin-svgo": "^8.0.0",
    "imagemin-webpack": "^5.1.1",
    "mini-css-extract-plugin": "^1.3.1",
    "node-sass": "^5.0.0",
    "optimize-css-assets-webpack-plugin": "^5.0.4",
    "pug": "^3.0.2",
    "pug-loader": "^2.4.0",
    "sass-loader": "^10.1.0",
    "stylelint": "^13.13.1",
    "stylelint-config-htmlacademy": "^0.1.10",
    "stylelint-order-htmlacademy": "^2.0.3",
    "terser-webpack-plugin": "^5.0.3",
    "webpack": "^5.6.0",
    "webpack-cli": "^4.2.0",
    "webpack-dev-server": "^3.11.0"
  },
  "dependencies": {
    "normalize.css": "^8.0.1"
  }
}
